{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<div class="row">
		{% for product in products %}
			<div class="col-md-2">
				<div class="card p-2" style="width: 25rem; margin:auto;">
					<img src="{{ product.picture }}" class="card-img-top" alt="Image du produit" style="height:300px">
					<div class="card-body">
						<h3 class="card-title">{{ product.title }}</h3>
						<p class="card-text">Description du produit :
							{{ product.description }}</p>
						<p class="card-text">Prix :
							{{ product.price }}
							€</p>
						{# <p class="card-text">Catégorie : {{ product.category.name }}</p>
					    <p class="card-text">Créé le : {{ product.createdAt|date('d/m/Y H:i:s') }}</p> #}
						<a href="{{ path('app_product_detail', { 'slug': product.slug }) }}" class="btn btn-primary">Détails</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
