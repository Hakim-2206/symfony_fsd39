{% extends 'base.html.twig' %}

{% block title %}Détails du produit
{% endblock %}

{% block body %}
	<h2>{{ product.title }}</h2>
	<p>{{ product.description }}</p>
	<p>Prix :
		{{ product.price }}€</p>
	<p>Slug :
		{{ product.slug }}</p>
	<p>Catégorie :
		{{ product.category.name }}</p>
	<img src="{{ product.picture }}" alt="Image du produit">
	<p>Créé le :
		{{ product.createdAt|date('d/m/Y H:i:s') }}</p>
	<p>Modifié le :
		{{ product.modifiedAt|date('d/m/Y H:i:s') }}</p>
{% endblock %}
